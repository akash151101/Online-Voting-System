    }

    .headDiv {
      font-weight: bold;
      color: #515b68;
      text-align: center;
      margin: 30px 0 0;
    }

    .otpImage {
      width: 120px;
      margin: 30px auto 10px;
    }
    .card-body{
      text-align: center;
      align-items: center;
      justify-content: center;
    }

    .card-title {
      font-size: 15px;
      color: #57616e;
      margin: 0 auto 15px;
      text-align: center;
    }

