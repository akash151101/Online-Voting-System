<body>

  <!-- <div class="bg-Blur"></div> -->



  <div class="card" style="width: 25rem;">
    <div class="headDiv">
      <p>OTP Verification</p>
    </div>
    <img class="card-img-top otpImage" src="/images/profile.png" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title" style="font-size:16px;font-weight:bold;">Enter your phone number <br> associated with your account</h5>
      <p class="card-text">We message you a otp to register <br> your voter ID</p>
      <div class="row">
        <form class="col s12" action="/users" method="post">
          <div class="row">
            <div class="input-field col s6">
              <!-- <i class="fa fa-phone" aria-hidden="true"></i> -->
              <input id="icon_telephone" type="tel" class="validate otpInput" name="phoneNumber" placeholder="Enter your number" autocomplete="off">
              <!-- <label for="icon_telephone">Telephone</label> -->
            </div>
          </div>
          <button type="submit" class="btn btn-primary btnStyle" name="userID" value="<%= Id %>">Submit</button>
        </form>
      </div>
    </div>
  </div>


