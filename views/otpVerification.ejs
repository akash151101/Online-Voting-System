      text-align: center;
    }

    .otpInput {
      text-align: center;
    }

    .input-field {
      margin: 0 auto 10px;
    }

    .btnStyle {
      border: none;
      color: #ffffff;
      padding: 5px 20px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      margin: 4px auto;
      cursor: pointer;
      border-radius: 16px;
    }
